@model Employee
@{
    ViewData["Title"] = "Edit";
}
<form method="post" action="/Employee/SaveEdit/@Model.Id">
    <div>
        <label>Name</label>
        <input name="Name" id="Name" value="@Model.Name" class="form form-control"/>
    </div>
    <div>
        <label>Salary</label>
        <input name="Salary" id="Salary" value="@Model.Salary" class="form form-control" />
    </div> 
    <div>
        <label>Address</label>
        <input name="Address" id="Address" value="@Model.Address" class="form form-control" />
    </div> 
    <div>
        <label>Image</label>
        <input name="Image" id="Image" value="@Model.Image" class="form form-control" />
    </div> 
    <div>
        <select name="Dept_Id" id="Dept_Id" class="form form-control">
            @foreach (Department dept in ViewBag.deptList)
            {
                  if(Model.Dept_Id==dept.Id)
                {
                    <option value="@dept.Id" selected>@dept.Name</option>
                }
                else
                {
                    <option value="@dept.Id" selected>@dept.Name</option>
                }
            }
        </select>
    </div>
    <input type="submit" value="Save"/>
</form>

